package application;

import java.util.Scanner;

public class acorda {

	public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
	      
	      int n = sc.nextInt();
	     int soma = 0;
	      for ( int i = 1; i <= n; i++) {
	        soma = soma + i;
	      }

	     System.out.println(soma);
	        return;

	}

}
